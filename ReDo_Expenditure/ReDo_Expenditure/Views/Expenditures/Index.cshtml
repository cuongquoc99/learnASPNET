@model IEnumerable<ReDo_Expenditure.Models.Expenditure>

@{
    ViewBag.Title = "Index";
}

<h2>Bảng Chi Tiêu</h2>

<p>
    <a href="@Url.Action("create","Expenditures")">Thêm Mới</a>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                Ngày Tháng
            </th>
            <th>
                Số Tiền
            </th>
            <th>
                Ghi Chú
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tbody>
        <tr>
            <td>
                @item.Date.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.Amount.ToString("N0")
            </td>
            <td>
                <pre> @item.Note </pre>
            </td>
            <td>
                <a href="@Url.Action("Edit","Expenditures", new { id = item.ID})">Sửa</a>
            </td>
            <td>
                <a href="@Url.Action("Details","Expenditures", new { id = item.ID})">Chi tiết</a>
            </td>
        </tr>
    </tbody>
    }

</table>

@*https://datatables.net/*@

@section Scripts {
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}